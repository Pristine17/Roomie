<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/add_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name of item"
        android:textColor="#004D40"
        android:maxLines="1"
        android:maxLength="10"
        android:ellipsize="end"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:minWidth="50dp"

        android:hint="Enter Quantity"
        android:textColor="#004D40"
        android:layout_below="@+id/price"
        android:layout_alignLeft="@+id/price">

    </EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:minWidth="50dp"
        android:hint="Enter Price"

        android:layout_marginLeft="20dp"
        android:textColor="#004D40"
        android:layout_below="@+id/add_item"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_add_black_48dp"
        android:id="@+id/addImage"
        android:background="@android:color/transparent"
        android:contentDescription="@string/common_signin_button_text"
        android:layout_alignBottom="@+id/quantity"
        android:layout_alignRight="@+id/add_item" />

</RelativeLayout>