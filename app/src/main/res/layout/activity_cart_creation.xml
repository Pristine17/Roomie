<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- The main content view -->

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:text="CHOOSE ONE OPTION"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <View
                android:id="@+id/devider3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_above="@+id/btnjoin"
                android:background="#000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

             <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_marginLeft="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_shopping_cart_black_48dp" />

                <Button
                    android:id="@+id/btnjoin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@color/cardview_light_background"
                    android:onClick="joinExisting"
                    android:text="Join an Existing Cart" />
            </LinearLayout>

            <View
                android:id="@+id/devider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/btnjoin"
                android:background="#000000"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_shopping_cart_black_48dp" />

                <Button
                    android:id="@+id/btncreate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:background="@color/cardview_light_background"
                    android:onClick="createOwn"
                    android:text="Create Your Own Cart" />

            </LinearLayout>

            <View
                android:id="@+id/devider2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/btnjoin"
                android:background="#000000"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0">
    </LinearLayout>

</LinearLayout>


